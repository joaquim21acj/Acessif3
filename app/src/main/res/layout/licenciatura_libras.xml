<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonVoltarLic"
        android:layout_width="178dp"
        android:layout_height="116dp"
        android:layout_marginBottom="26dp"
        android:layout_marginLeft="860dp"
        android:layout_marginTop="8dp"
        android:onClick="onClick"
        android:text="Voltar"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonTecAdmLibras"
        app:layout_constraintRight_toLeftOf="@+id/buttonRepetirLic"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/buttonRepetirLic"
        android:layout_width="178dp"
        android:layout_height="116dp"
        android:layout_marginBottom="26dp"
        android:layout_marginLeft="1074dp"
        android:layout_marginTop="8dp"
        android:onClick="onClick"
        android:text="Repetir"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonTecAdmLibras"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <VideoView
        android:id="@+id/videoViewLic"
        android:layout_width="777dp"
        android:layout_height="599dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="608dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.027"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="428dp"
        android:layout_height="109dp"
        android:text="Licenciatura Quimíca"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/videoViewLic"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.617" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="183dp"
        android:layout_height="77dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="945dp"
        android:layout_marginTop="8dp"
        android:text="Duração: 8 meses"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonVoltarLic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="265dp"
        android:layout_height="110dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="929dp"
        android:layout_marginTop="8dp"
        android:text="Ingresso: Nota Enem ou SISU"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonVoltarLic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />
</android.support.constraint.ConstraintLayout>